{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": false,
        "allowJs": false,
        "strict": true,
        "strictNullChecks": false,
        "rootDir": ".",
        "baseUrl": "."
    },
    "exclude": [
        "../node_modules",
        "./**/*.spec.ts"
    ]
}